{
	"name": "ondrejbrejla/eciovni",
	"description": "Component for generating invoices using Nette Framework and mPDF library.",
	"homepage": "https://github.com/obrejla/Eciovni",
	"keywords": [
		"invoice",
		"generator",
		"nette",
		"latte",
		"mpdf"
	],
	"authors": [
		{
			"name": "Ondřej Brejla",
			"email": "ondrej@brejla.cz",
			"homepage": "http://brejla.cz"
		},
		{
			"name": "Jan Barášek",
			"email": "jan@barasek.com",
			"homepage": "https://baraja.cz"
		}
	],
	"require": {
		"php": "^8.0 <8.1",
		"nette/utils": "^3.2",
		"latte/latte": "^2.10",
		"mpdf/mpdf": "^8.0"
	},
	"require-dev": {
		"tracy/tracy": "^2.6",
		"phpstan/phpstan": "^0.12.74",
		"phpstan/phpstan-nette": "^0.12.14",
		"phpstan/phpstan-doctrine": "^0.12.10",
		"spaze/phpstan-disallowed-calls": "^1.1",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpstan": [
			"vendor/bin/phpstan analyse src -c phpstan.neon --level 8 --no-progress"
		]
	},
	"minimum-stability": "stable"
}
